<h1>Create New Figure</h1>
<form action="/figures" method="POST">
    <label>Name:</label>
    <input type="text" id="figure_name" name="figure[name]">
    <br></br>
    <label>Title:</label>
    <% Title.all.each do |title| %>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]"><%= title.name %></input>
    <% end %>
    <br></br>
    
    <label>Create New Title:</label>
    <input type="text" name="title[name]" id="new_title">
    <br></br>
    
    <label>Landmark:</label>
    <% Landmark.all.each do |landmark| %>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]"><%= landmark.name %></input>
    <% end %>
    <br></br>
    
    <label>Create New Landmark:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    
    <br></br>
    <input type="submit" value="Create New Figure">
</form>